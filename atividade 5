#include <stdio.h> 
int main(){
    int n,n1,a;
    printf ("Digite o primeiro numero inteiro"):
    scanf ("%i", &n);
  printf ("Digite o segundo numero inteiro"):
    scanf ("%i", &n1);
    printf ("A seguir está o resulado das 4 operações basicas");
    a=n+n1;
    printf ("\n %i + %i = %i",n,n1,a);
    a=n-n1;
    printf ("\n %i - %i = %i",n,n1,a);
    a=n*n1;
    printf ("\n %i * %i = %i",n,n1,a);
    a=n/n1;
    printf ("\n %i / %i = %i",n,n1,a);
    return 0;
}
